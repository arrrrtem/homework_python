# напишите скрипт который выводит надпись "Bash - это лучшее что может быть" 20 раз в консоль
# если передан ключ -f то после него идет имя файла в который перенаправляется вывод


#!/bin/bash

message="Bash - это лучшее что может быть"

if [ "$1" == "-f" ]; then
    # Если передан ключ -f, проверяем, есть ли аргумент (имя файла)
    if [ -z "$2" ]; then
        echo "Ошибка: Укажите имя файла для перенаправления вывода."
        exit 1
    else
        # Перенаправляем вывод в указанный файл
        for _ in {1..20}; do
            echo "$message" >> "$2"
        done
        echo "Вывод успешно перенаправлен в файл: $2"
    fi
else
    # Выводим надпись в консоль 20 раз
    for _ in {1..20}; do
        echo "$message"
    done
fi
