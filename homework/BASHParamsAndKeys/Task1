# Напишите скрипт который дает студенту 3 секунды чтобы ответить на вопрос "ФИО преподавателя"
# Если он не успевает выводится "Вы отчислены"


#!/bin/bash

question="ФИО преподавателя"
correct_answer="Иванов Иван Иванович"

# Вывод вопроса и таймер на 3 секунды для ответа
echo "Вопрос: $question"
read -t 3 answer

# Проверка ответа
if [ "$answer" == "$correct_answer" ]; then
    echo "Правильный ответ!"
else
    echo "Вы отчислены. Правильный ответ: $correct_answer"
fi
