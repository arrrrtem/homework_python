# напишите скрипт для регистрации если передан ключ -r запрашиваем логин и пароль. Заносим в файл и выводим "Вы успешно зарегестрировались"
# если не передан ключ выводим надпись "А что вы тогда тут делаете?"


#!/bin/bash

while getopts "r" opt; do
    case $opt in
        r)
            # Запрос логина и пароля при использовании ключа -r
            read -p "Введите логин: " username
            read -p "Введите пароль: " password

            # Занесение логина и пароля в файл
            echo "Логин: $username" >> users.txt
            echo "Пароль: $password" >> users.txt

            echo "Вы успешно зарегистрировались"
            ;;
        *)
            # Вывод сообщения об ошибке при отсутствии ключа -r
            echo "А что вы тогда тут делаете?"
            ;;
    esac
done
