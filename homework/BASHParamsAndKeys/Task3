#Напишите скрипт который принимает 2 аргумента и записывает первый аргумент в файл где имя файла второй аргумент.


#!/bin/bash

if [ $# -eq 2 ]; then
    echo "$1" > "$2"
    echo "Данные успешно записаны в файл: $2"
else
    echo "Некорректное количество аргументов. Используйте два аргумента: значение и имя файла."
fi
