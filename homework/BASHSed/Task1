# Напишите скрипт который принимает флаг -l после которого идет название языка программирования
# скрипт должен подставить название языка после 1 2 и 3 строчки в файле
# Протестируйте на файле FileForTask1


#!/bin/bash

while getopts "l:" opt; do
    case $opt in
        l)
            # Записываем переданное название языка
            language=$OPTARG
            ;;
        *)
            # Вывод сообщения об ошибке для некорректных ключей
            echo "Некорректный ключ. Используйте -l для указания языка программирования."
            exit 1
            ;;
    esac
done

# Проверка наличия названия языка
if [ -n "$language" ]; then
    # Заменяем текст в файле на соответствующих строках
    sed -i "1s/.*/$language/" FileForTask1
    sed -i "2s/.*/$language/" FileForTask1
    sed -i "3s/.*/$language/" FileForTask1
    echo "Название языка программирования успешно подставлено в файл."
else
    # Вывод сообщения об ошибке для отсутствия названия языка
    echo "Не указано название языка программирования. Используйте -l для указания языка."
    exit 1
fi
