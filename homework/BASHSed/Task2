# Напишите скрипт который принимает имя файла и выводит только строчки в которых есть слово BASH
# Протестируйте на FileforTask2.txt


#!/bin/bash

if [ $# -eq 1 ]; then
    # Используем grep для поиска строк, содержащих слово "BASH"
    grep "BASH" "$1"
else
    # Вывод сообщения об ошибке для некорректного количества аргументов
    echo "Некорректное количество аргументов. Укажите только имя файла."
    exit 1
fi
